#include <winver.h>

VS_VERSION_INFO VERSIONINFO
FILEVERSION     @FILE_VERSION@
PRODUCTVERSION  @PRODUCT_VERSION@
FILEFLAGSMASK   0x3fL
#ifdef _DEBUG
    FILEFLAGS   VS_FF_DEBUG
#else
    FILEFLAGS   0x0L
#endif
FILEOS          VOS_NT_WINDOWS32
FILETYPE        VFT_DLL
FILESUBTYPE     VFT2_UNKNOWN

BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "FileVersion", "@FILE_VERSION_STR@\0"
            VALUE "ProductVersion", "@PRODUCT_VERSION_STR@\0"
            VALUE "CompanyName", "@COMPANY_NAME@\0"
            VALUE "FileDescription", "@DLL_DESCRIPTION@\0"
            VALUE "InternalName", "@TARGET_NAME@.dll\0"
            VALUE "LegalCopyright", "@COPYRIGHT@\0"
            VALUE "OriginalFilename", "@TARGET_NAME@.dll\0"
            VALUE "ProductName", "@PRODUCT_NAME@\0"
            VALUE "GitCommit", "@GIT_COMMIT_HASH@\0"
            VALUE "BuildDate", "@COMPILE_TIME@\0"
        END
    END
    
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 0x04b0
    END
END