{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "description": "Base configuration for all platforms",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_VERBOSE_MAKEFILE": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "I18N_UPDATE_TS": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "default",
      "description": "Windows platform base configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": "default",
      "description": "macOS platform base configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "default",
      "description": "Linux platform base configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "description": "Windows MSVC compiler - Debug configuration",
      "inherits": "windows-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "description": "Windows MSVC compiler - Release configuration with debug info",
      "inherits": "windows-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_FLAGS_RELEASE": "/MD /O2 /Ob2 /DNDEBUG /Zi",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/DEBUG /OPT:REF /OPT:ICF",
        "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "/DEBUG /OPT:REF /OPT:ICF"
      }
    },
    {
      "name": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug",
      "description": "Windows MinGW compiler - Debug configuration",
      "inherits": "windows-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows-mingw-release",
      "displayName": "Windows MinGW Release",
      "description": "Windows MinGW compiler - Release configuration",
      "inherits": "windows-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "description": "macOS Clang - Debug configuration",
      "inherits": "macos-base",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "description": "macOS Clang - Release configuration",
      "inherits": "macos-base",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Linux GCC - Debug configuration",
      "inherits": "linux-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Linux GCC - Release configuration",
      "inherits": "linux-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "targets": ["mainEntry"]
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "targets": ["mainEntry"]
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "targets": ["mainEntry"]
    }
  ],
  "packagePresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "generators": ["ZIP"]
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "generators": ["ZIP", "NSIS"]
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "generators": ["ZIP"]
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "generators": ["ZIP", "NSIS"]
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug",
      "generators": ["TGZ"]
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "generators": ["TGZ", "DragNDrop"]
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "generators": ["TGZ"]
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "generators": ["TGZ", "DEB", "RPM"]
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "inherits": "test-base"
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "inherits": "test-base"
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "inherits": "test-base"
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "inherits": "test-base"
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug",
      "inherits": "test-base"
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "inherits": "test-base"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "inherits": "test-base"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "inherits": "test-base"
    }
  ]
}