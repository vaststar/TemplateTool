{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "description": "默认配置（基础）",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_VERBOSE_MAKEFILE": "ON",
        "I18N_UPDATE_TS": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "default",
      "description": "Windows 平台基础配置",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": "default",
      "description": "macOS 平台基础配置",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "default",
      "description": "Linux 平台基础配置",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/bin"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "description": "Windows MSVC 编译器 - Debug 配置",
      "inherits": "windows-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "description": "Windows MSVC 编译器 - Release 配置",
      "inherits": "windows-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug",
      "description": "Windows MinGW 编译器 - Debug 配置",
      "inherits": "windows-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows-mingw-release",
      "displayName": "Windows MinGW Release",
      "description": "Windows MinGW 编译器 - Release 配置",
      "inherits": "windows-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "description": "macOS GCC - Debug 配置",
      "inherits": "macos-base",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "description": "macOS GCC - Release 配置",
      "inherits": "macos-base",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Linux GCC - Debug 配置",
      "inherits": "linux-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Linux GCC - Release 配置",
      "inherits": "linux-base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "targets": ["mainEntry"]
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "targets": ["mainEntry"]
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "targets": ["mainEntry"]
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "targets": ["mainEntry"]
    }
  ],
  "packagePresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "generators": ["ZIP"]
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "generators": ["ZIP", "NSIS"]
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "generators": ["ZIP"]
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "generators": ["ZIP", "NSIS"]
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug",
      "generators": ["TGZ"]
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "generators": ["TGZ", "DragNDrop"]
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "generators": ["TGZ"]
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "generators": ["TGZ", "DEB", "RPM"]
    }
  ]
}